Matrix psudocode
  declare matrix data structure
  declare scalar k
  headderfiles
  function declarations
  start main
    declare 2 matrix variables a and b
    Display options for program
    start loop (do loop)
      switch statement
        case for calc sum
          call calc_sum function (parametters a,b)
        case for calc difference
          call calc_diff function (parametters a,b)
        case scalar mult
          call scalar_mult function (parametters k,a)
        case for calc product
          call calc_prod function (parametters a,b)
        case for calc inverse
          call calc_inv function passing (parametters a)
        case to end
          set variable to stop loop
        default
          print invalid input
      end loop
  end main
  function calc_sum definition (matrix a matrix b)
  start def
    call get matrix function for matrix a
    call get matrix function for matrix b
    preform matrix addition operation
    call function print matirix for a
    call function print matirix for b
    call function print matirix for sum
  end def
  function calc_diff definition (matrix a matrix b)
  start def
    a = call get matrix function
    b = call get matrix function
    preform matrix subtraction operation
    call function print matirix for a
    call function print matirix for b
    call function print matirix for difference
  end def
  function calc_mult definition (scalar k matrix a)
  start def
    a = call get matrix function
    call get skalar function
    preform scalar multiplication operation
    call print function for matrix a
    call print scalar function for scalar
    call print matrix function for product
  end def_prod
  function call calp_prod (matrix a matrix b)
  start def
    a = call get matrix function
    b = call get matrix function
    preform matrix multiplication operation
    call print matrix function for a
    call print matrix function for b
    call print matrix function for product
  end def
  function define calc_inv (matrix a)
  start def
    a = call get matrix function
    preform invert matrix operation
    call print matrix function for a
    call print matrix function for inverse
  end def
